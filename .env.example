# Variables de entorno para el Bot de Llanteras
# Copia este archivo como .env.local para desarrollo local
# Para Netlify, configura estas variables en el panel de administraci√≥n

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Facebook Messenger
FACEBOOK_PAGE_ACCESS_TOKEN=your_page_access_token_here
FACEBOOK_APP_SECRET=your_app_secret_here
FACEBOOK_VERIFY_TOKEN=your_verify_token_here

# Webhook URL (para configurar en Facebook)
WEBHOOK_URL=https://llanteras-bot.netlify.app/.netlify/functions/webhook

# Desarrollo
NODE_ENV=development
PORT=3000